{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "no-undef": "off",
    "eol-last": 2,
    "eqeqeq": "error",
    "indent": ["error", 2],
    "block-spacing": ["error", "always"],
    "comma-spacing": "error",
    "brace-style": "error",
    "function-paren-newline": ["error", "consistent"],
    "max-len": ["warn", 120],
    "key-spacing": "error",
    "quotes": ["warn", "double"],
    "space-infix-ops": "error"
  }
}
